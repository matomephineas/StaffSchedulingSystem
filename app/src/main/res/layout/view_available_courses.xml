<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp">
   <LinearLayout
       android:background="@drawable/editbackground"
       android:padding="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/addCourse"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:background="@drawable/editbackground"
               android:padding="5dp"
               android:text="Add Subject"
               android:textAllCaps="false" />
           <TextView
               android:layout_marginLeft="5dp"
               android:id="@+id/viewSubjects"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"

               android:background="@drawable/editbackground"
               android:padding="5dp"
               android:text="View Subjects"
               android:textAllCaps="false" />
           <TextView
               android:id="@+id/addStudent"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/editbackground"
               android:padding="5dp"
               android:layout_marginRight="10dp"
               android:text="Add Student"
               android:textAllCaps="false" />
       </RelativeLayout>
       <TextView
           android:layout_marginTop="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Course details"
           android:id="@+id/tv"
           android:textColor="@color/black"
           android:layout_gravity="center_horizontal"
           android:textSize="16sp"
           android:textStyle="bold"/>
       <RelativeLayout
           android:layout_marginTop="5dp"
           android:id="@+id/linearv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <TextView
               android:id="@+id/view_course_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Information and communication technology"
               android:textColor="@color/black"
               android:textSize="15sp" />
           <TextView
               android:layout_below="@id/view_course_name"
               android:layout_marginTop="8dp"
               android:id="@+id/view_course_code"
               android:layout_width="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_height="wrap_content"
               android:text="ICT"
               android:textColor="@color/black"
               android:textSize="15sp" />

           <TextView
               android:layout_below="@id/view_course_code"
               android:layout_marginTop="8dp"
               android:id="@+id/view_course_faculty"
               android:layout_width="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_height="wrap_content"
               android:text="Computer Science"
               android:textColor="@color/black"
               android:textSize="15sp" />

       </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/editCourse"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:src="@drawable/ic_baseline_edit_24" />



           <ImageView
               android:id="@+id/deleteCourse"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:src="@drawable/ic_baseline_delete_24" />
       </RelativeLayout>

   </LinearLayout>
</androidx.cardview.widget.CardView>